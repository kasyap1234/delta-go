# Environment Configuration Example
# Copy to .env and fill in your values

# Delta Exchange API (Required)
DELTA_API_KEY=your_api_key_here
DELTA_API_SECRET=your_api_secret_here

# Use testnet for testing (default: true)
DELTA_TESTNET=true

# Trading Configuration
DELTA_SYMBOL=BTCUSD
DELTA_SYMBOLS=BTCUSD,ETHUSD,SOLUSD
MULTI_ASSET_MODE=true
DELTA_LEVERAGE=10
DELTA_MAX_POSITION_PCT=10

# HMM Cloud Function
HMM_ENDPOINT=http://localhost:8080

# Trade Predictor Cloud Function
TRADE_PREDICTOR_ENDPOINT=http://localhost:8081

# Risk Management
MAX_DRAWDOWN_PCT=10
STOP_LOSS_PCT=2
TAKE_PROFIT_PCT=4
RISK_PER_TRADE_PCT=1

# Intervals
CANDLE_INTERVAL=5m
REGIME_CHECK_SECONDS=300

# Intervals
CANDLE_INTERVAL=5m
